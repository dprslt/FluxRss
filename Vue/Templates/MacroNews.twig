{% macro News(id, titre, description, url, flux, URLImage, TitleImage) %}
    <div class="center_news">
        <div class="news_title">
            <div class="news_flux_icon">
                <a href="?action=afficherNewsDe&flux={{ flux }}" ><img src="{{ URLImage }}" title="{{ TitleImage }}"/></a>
            </div>
            <div class="news_link">
                <a href="{{ url }}" target="_blank">{{ titre }}</a>
                <span class="news_more" onclick="toogleNews('det{{ id }}','but{{ id }}')"> - DÃ©tails</span>
            </div>
            <div id="deroul{{ id }}" class="news_deroul" onclick="toogleNews('det{{ id }}','but{{ id }}')"><img id="but{{ id }}" src="Vue/Image/arrow.png"/></div>
        </div>
        <div class="news_details hori_rollable"id="det{{ id }}" style="max-height: 0em">
            <div class="news_description">
                <p>{{ description|raw }}</p>
            </div>
            <div class="news_hide_rollable" onclick="toogleNews('det{{ id }}','but{{ id }}')">Replier</div>
        </div>
    </div>
{% endmacro %}
