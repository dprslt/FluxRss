{% macro News(id, titre, description,url, URLImage) %}

    <div class="center_news">
        <div class="news_title">
            <div class="news_flux_icon"></div>
            <div class="news_link"><a href="{{ url }}" target="_blank">{{ titre }}</a></div>
            <div class="news_deroul" onclick="toogleNews('det{{ id }}','but{{ id }}')"><img id="but{{ id }}" src="Vue/Image/arrow.png"/></div>
        </div>
        <div class="news_details hori_rollable"id="det{{ id }}" style="max-height: 0em">
            <div class="news_description">
                <p>{{ description|raw }}</p>
            </div>
        </div>
    </div>
{% endmacro %}
